@using DinamikCv.Models.Entity
@model List<TblEgitimlerim>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Eğitim Listesi</h2>
<br />
<table class="table table-bordered">
    <tr style="background-color:#808080">
        <th>ID</th>
        <th>Kurum</th>
        <th>Bölüm</th>
        <th>Alan</th>
        <th>GNO</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.BASLIK</td>
            <td>@x.ALTBASLIK1</td>
            <td>@x.ALTBASLIK2</td>
            <td>@x.GNO</td>
            <td>@x.TARIH</td>
            <td>
                <a href="/Egitim/EgitimSil/@x.ID" class="btn btn-danger btn-sm">
                    <i class="fas fa-trash"></i>
                    Sil
                </a>
            </td>
            <td>
                <a href="/Egitim/EgitimDuzenle/@x.ID" class="btn btn-info btn-sm">
                    <i class="fas fa-pencil-alt"></i>
                    Düzenle
                </a>
            </td>
        </tr>
    }
</table>
<a href="/Egitim/EgitimEkle/" class="btn btn-primary">Yeni Egitim Ekle</a>